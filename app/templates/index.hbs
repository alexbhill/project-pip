<div class="search {{ if searchIsToggled 'search-on' }}" >
  {{input type="search" value=search placeholder="Search by address or street nameâ€¦" autofocus="autofocus"}}
  <a tabindex="0" class="close" {{ action "clear" on="click" }} href="#"><svg><use xlink:href="#icon-close"></use></svg></a>
</div>

<div class="page">
  {{#map-container search=search activeProperty=activeProperty activeOwner=activeOwner activeZip=activeZip layers=layers model=parcels}}
  {{/map-container}}

  <nav class="nav nav-icons">
    <a class="nav-icon nav-icon-search btn" tabindex="0" {{ action "toggleSearch" preventDefault=true}} href="#"><svg><use xlink:href="#icon-search"></use></svg></a>
  </nav>

  <div class="panel panel-on">
    {{#if activeOwner.id}}
      {{#owner-details activeOwner=activeOwner}}{{/owner-details}}
    {{/if}}

    {{#if activeZip.id}}
      {{#zip-details activeZip=activeZip}}{{/zip-details}}
    {{/if}}

    {{#if activeProperty.id}}
      {{#property-details activeProperty=activeProperty activeOwner=activeOwner activeZip=activeZip clear="clear"}}{{/property-details}}
    {{/if}}

    {{#if results.length}}
      {{#property-list results=results activeProperty=activeProperty}}{{/property-list}}
    {{/if}}
  </div>

  {{#streetview-loader activeProperty=activeProperty}}{{/streetview-loader}}

  {{#map-legend legendIsToggled=legendIsToggled}}{{/map-legend}}

  <a href="#" class="legend-toggle btn {{if legendIsToggled "hide" ""}}" {{ action "toggleLegend" preventDefault=true }}>
    <svg><use xlink:href="#icon-compass"></use></svg>
  </a>
</div>
